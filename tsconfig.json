{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@utils": ["./src/utils/index.ts"],
      "@utils/tiled": ["./src/utils/tiled/index.ts"],
      "@utils/pixi": ["./src/utils/pixi/index.ts"],
      "@utils/geometry": ["./src/utils/geometry/index.ts"],
      "@core": ["./src/core/index.ts"],
      "@lib": ["./src/lib/index.ts"],
      "@lib/*": ["./src/lib/*"],
      "@ui/*": ["./src/ui/*"],
      "@core/*": ["./src/core/*"],
      "@workers/*": ["./src/workers/*"],
      "mini-signals": [
        "./node_modules/resource-loader/typings/mini-signals.d.ts"
      ]
    }
  },
  "include": ["src/**/*", "./tools", "assets"],
  "exclude": [".ignore", "./static"]
}
